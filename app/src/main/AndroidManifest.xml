<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="langitpay.unpam.simulasiatm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bank_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bank_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".ui.Splash"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".menu.TarikTunaiActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".menu.SetorTunaiActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />

        <activity
            android:name=".menu.TransferActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.About" />

    </application>

</manifest>